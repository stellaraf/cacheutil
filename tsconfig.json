{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ES2022", "dom"],
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@stellaraf/cacheutil-*": ["packages/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "jest.config.ts", "build.ts"]
}
